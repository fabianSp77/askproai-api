                                        { from: 13, to: 999, name: 'Sehr viel', color: '#1E40AF' }
                                    ]
                                }
                            }
                        },
                        dataLabels: {
                            enabled: true,
                            style: {
                                colors: ['#000'],
                                fontSize: '11px'
