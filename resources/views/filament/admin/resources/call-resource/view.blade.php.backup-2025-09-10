                            $transcriptLines = explode("\n", $record->transcript);
                        @endphp
                        @foreach($transcriptLines as $index => $line)
                            @if(trim($line))
                            <div class="relative flex items-start">
                                <div class="absolute left-4 w-2 h-2 bg-blue-600 rounded-full -translate-x-1/2"></div>
