                                        {{ $record->appointment->status === 'scheduled' ? 'bg-blue-100 text-blue-800' : '' }}
                                        {{ $record->appointment->status === 'completed' ? 'bg-green-100 text-green-800' : '' }}
                                        {{ $record->appointment->status === 'cancelled' ? 'bg-red-100 text-red-800' : '' }}">
                                        {{ ucfirst($record->appointment->status ?? 'unknown') }}
                                    </span>
