        {{-- Analysis Section with Flowbite Alert --}}
        @if($record->analysis)
        <div class="bg-white dark:bg-gray-800 overflow-hidden shadow-xl rounded-lg border border-gray-200 dark:border-gray-700">
            <div class="p-6">
                <h3 class="text-lg font-semibold mb-4 text-gray-900 dark:text-white">AI Analysis</h3>
                
                @php
                    $analysis = is_string($record->analysis) ? json_decode($record->analysis, true) : $record->analysis;
                @endphp
                
                @if($analysis)
                <div class="space-y-3">
                    @foreach($analysis as $key => $value)
                    <div class="flex items-start space-x-3">
