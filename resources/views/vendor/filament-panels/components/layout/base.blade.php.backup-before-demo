@props([
    'livewire' => null,
])

<!DOCTYPE html>
<html
    lang="{{ str_replace('_', '-', app()->getLocale()) }}"
    dir="{{ __('filament-panels::layout.direction') ?? 'ltr' }}"
    @class([
        'fi min-h-screen',
        'dark' => filament()->hasDarkModeForced(),
    ])
>
    <head>
        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::HEAD_START, scopes: $livewire->getRenderHookScopes()) }}

        <meta charset="utf-8" />
        <meta name="csrf-token" content="{{ csrf_token() }}" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />

        @if ($favicon = filament()->getFavicon())
            <link rel="icon" href="{{ $favicon }}" />
        @endif

        @php
            $title = trim(strip_tags(($livewire ?? null)?->getTitle() ?? ''));
            $brandName = trim(strip_tags(filament()->getBrandName()));
        @endphp

        <title>
            {{ filled($title) ? "{$title} - " : null }} {{ $brandName }}
        </title>
        
        <script>
            // Prevent any hiding before page loads
            document.documentElement.style.opacity = '1';
            document.documentElement.style.visibility = 'visible';
        </script>

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::STYLES_BEFORE, scopes: $livewire->getRenderHookScopes()) }}

        <style>
            [x-cloak=''],
            [x-cloak='x-cloak'],
            [x-cloak='1'] {
                display: none !important;
            }

            @media (max-width: 1023px) {
                [x-cloak='-lg'] {
                    display: none !important;
                }
            }

            @media (min-width: 1024px) {
                [x-cloak='lg'] {
                    display: none !important;
                }
            }
        </style>

        @filamentStyles

        {{ filament()->getTheme()->getHtml() }}
        {{ filament()->getFontHtml() }}
        
        {{-- Portal Universal CSS Fix --}}
        <link rel="stylesheet" href="/css/portal-universal-fix.css?v={{ time() }}">
        
        {{-- Debug Styles (only in debug mode) --}}
        @if(config('app.debug'))
            <link rel="stylesheet" href="/css/portal-debug-styles.css?v={{ time() }}">
        @endif
        
        {{-- Include CSS fix --}}
        @include('filament-panels::components.layout.css-fix')

        <style>
            :root {
                --font-family: '{!! filament()->getFontFamily() !!}';
                --sidebar-width: {{ filament()->getSidebarWidth() }};
                --collapsed-sidebar-width: {{ filament()->getCollapsedSidebarWidth() }};
                --default-theme-mode: {{ filament()->getDefaultThemeMode()->value }};
            }
        </style>

        @stack('styles')

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::STYLES_AFTER, scopes: $livewire->getRenderHookScopes()) }}

        @if (! filament()->hasDarkMode())
            <script>
                localStorage.setItem('theme', 'light')
            </script>
        @elseif (filament()->hasDarkModeForced())
            <script>
                localStorage.setItem('theme', 'dark')
            </script>
        @else
            <script>
                const loadDarkMode = () => {
                    window.theme = localStorage.getItem('theme') ?? @js(filament()->getDefaultThemeMode()->value)

                    if (
                        window.theme === 'dark' ||
                        (window.theme === 'system' &&
                            window.matchMedia('(prefers-color-scheme: dark)')
                                .matches)
                    ) {
                        document.documentElement.classList.add('dark')
                    }
                }

                loadDarkMode()

                document.addEventListener('livewire:navigated', loadDarkMode)
            </script>
        @endif

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::HEAD_END, scopes: $livewire->getRenderHookScopes()) }}
    </head>

    <body
        {{ $attributes
                ->merge(($livewire ?? null)?->getExtraBodyAttributes() ?? [], escape: false)
                ->class([
                    'fi-body',
                    'fi-panel-' . filament()->getId(),
                    'min-h-screen bg-gray-50 font-normal text-gray-950 antialiased dark:bg-gray-950 dark:text-white',
                ]) }}
    >
        {{-- All emergency fixes have been replaced by portal-universal-fix.js --}}
        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::BODY_START, scopes: $livewire->getRenderHookScopes()) }}

        {{ $slot }}

        @livewire(Filament\Livewire\Notifications::class)

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::SCRIPTS_BEFORE, scopes: $livewire->getRenderHookScopes()) }}
        
        {{-- Alpine Single Instance Enforcer - MUST be absolutely first --}}
        <script src="/js/alpine-single-instance.js?v={{ time() }}"></script>
        
        {{-- Livewire Configuration - Must be first --}}
        <script src="/js/livewire-config.js?v={{ time() }}"></script>
        
        {{-- Force Load Frameworks - Emergency diagnostic --}}
        <script src="/js/force-load-frameworks.js?v={{ time() }}"></script>
        
        {{-- Operations Dashboard Alpine Fix - Must run BEFORE everything else --}}
        @if(request()->is('admin') || request()->is('admin/') || str_contains(request()->path(), 'operations-dashboard'))
            <script src="/js/operations-dashboard-alpine-fix.js?v={{ time() }}"></script>
        @endif
        
        {{-- Alpine Error Handler - Prevents annoying popups --}}
        <script src="/js/alpine-error-handler.js?v={{ time() }}"></script>
        
        {{-- Emergency Framework Loader - Must run BEFORE filamentScripts --}}
        <script src="/js/emergency-framework-loader.js?v={{ time() }}"></script>

        @filamentScripts(withCore: true)
        
        {{-- Manual Framework Loader - Fallback if Filament scripts fail --}}
        <script src="/js/manual-framework-loader.js?v={{ time() }}"></script>
        
        {{-- Alpine Sidebar Store Fix - Must run AFTER filamentScripts --}}
        <script src="/js/alpine-sidebar-store-fix.js?v={{ time() }}"></script>
        
        {{-- Operations Dashboard Fix - For specific page issues --}}
        @if(request()->routeIs('filament.admin.pages.'))
            <script src="/js/operations-dashboard-fix.js?v={{ time() }}"></script>
        @endif

        @if (filament()->hasBroadcasting() && config('filament.broadcasting.echo'))
            <script data-navigate-once>
                window.Echo = new window.EchoFactory(@js(config('filament.broadcasting.echo')))

                window.dispatchEvent(new CustomEvent('EchoLoaded'))
            </script>
        @endif
        

        @if (filament()->hasDarkMode() && (! filament()->hasDarkModeForced()))
            <script>
                loadDarkMode()
            </script>
        @endif

        @stack('scripts')

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::SCRIPTS_AFTER, scopes: $livewire->getRenderHookScopes()) }}
        
        {{-- Widget Display Fix - MUST run after all other scripts --}}
        <script src="/js/widget-display-fix.js?v={{ time() }}"></script>
        
        {{-- Calls Page Widget Fix - Specific fix for calls page --}}
        <script src="/js/calls-page-widget-fix.js?v={{ time() }}"></script>
        
        {{-- Portal Universal Fix - Complete solution for Alpine/Livewire --}}
        <script src="/js/portal-universal-fix.js?v={{ time() }}"></script>
        
        {{-- Livewire 404 Fix - Prevents error popups --}}
        <script src="/js/livewire-404-popup-fix.js?v={{ time() }}"></script>
        
        {{-- Livewire Error Suppressor - Suppresses known non-critical errors --}}
        <script src="/js/livewire-error-suppressor.js?v={{ time() }}"></script>
        
        {{-- Debug Helper - Only in development --}}
        @if(config('app.debug'))
            <script src="/js/portal-debug-helper.js?v={{ time() }}"></script>
        @endif

        {{ \Filament\Support\Facades\FilamentView::renderHook(\Filament\View\PanelsRenderHook::BODY_END, scopes: $livewire->getRenderHookScopes()) }}
    </body>
</html>
