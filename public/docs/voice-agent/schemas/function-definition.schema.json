{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://api.askpro.ai/schemas/function-definition.json",
  "title": "Voice AI Function Definition",
  "description": "Schema for defining Voice AI Agent functions with complete specifications",
  "type": "object",
  "required": ["name", "version", "metadata", "endpoint", "parameters", "responses"],
  "properties": {
    "name": {
      "type": "string",
      "description": "Function name (snake_case)",
      "pattern": "^[a-z][a-z0-9_]*$",
      "examples": ["collect_appointment_info", "check_availability"]
    },
    "version": {
      "type": "string",
      "description": "Semantic version (semver)",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "examples": ["1.0.0", "2.1.3"]
    },
    "metadata": {
      "type": "object",
      "required": ["title", "description", "status", "priority"],
      "properties": {
        "title": {
          "type": "string",
          "description": "Human-readable function title",
          "examples": ["Collect Appointment Information"]
        },
        "description": {
          "type": "string",
          "description": "Detailed description of function purpose and behavior",
          "minLength": 20
        },
        "status": {
          "type": "string",
          "enum": ["specified", "implemented", "partial", "deprecated"],
          "description": "Implementation status"
        },
        "priority": {
          "type": "string",
          "enum": ["critical", "high", "medium", "low"],
          "description": "Business priority level"
        },
        "category": {
          "type": "string",
          "description": "Functional category",
          "examples": ["booking", "modification", "query"]
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Searchable tags",
          "examples": [["appointment", "creation", "validation"]]
        },
        "author": {
          "type": "string",
          "description": "Original author or team"
        },
        "lastModified": {
          "type": "string",
          "format": "date-time",
          "description": "Last modification timestamp"
        }
      }
    },
    "endpoint": {
      "type": "object",
      "required": ["method", "path"],
      "properties": {
        "method": {
          "type": "string",
          "enum": ["GET", "POST", "PUT", "PATCH", "DELETE"],
          "description": "HTTP method"
        },
        "path": {
          "type": "string",
          "description": "URL path (relative to base URL)",
          "pattern": "^/",
          "examples": ["/api/retell/collect-appointment-info"]
        },
        "baseUrl": {
          "type": "string",
          "format": "uri",
          "description": "Base URL for the endpoint",
          "examples": ["https://api.askpro.ai"]
        },
        "timeout": {
          "type": "integer",
          "description": "Request timeout in milliseconds",
          "default": 30000,
          "minimum": 1000,
          "maximum": 300000
        },
        "retryable": {
          "type": "boolean",
          "description": "Whether this endpoint supports retries",
          "default": false
        },
        "authentication": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["bearer", "apikey", "oauth2", "none"]
            },
            "required": {
              "type": "boolean"
            }
          }
        }
      }
    },
    "parameters": {
      "type": "object",
      "required": ["required", "optional"],
      "properties": {
        "required": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          },
          "description": "Required parameters"
        },
        "optional": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/parameter"
          },
          "description": "Optional parameters"
        }
      }
    },
    "validation": {
      "type": "object",
      "properties": {
        "rules": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["field", "rule", "message"],
            "properties": {
              "field": {
                "type": "string",
                "description": "Field name to validate"
              },
              "rule": {
                "type": "string",
                "description": "Validation rule (Laravel format)",
                "examples": ["required", "email", "min:3", "regex:/^\\+\\d{10,15}$/"]
              },
              "message": {
                "type": "string",
                "description": "Custom error message"
              }
            }
          }
        },
        "custom": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "description", "implementation"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Custom validator name"
              },
              "description": {
                "type": "string",
                "description": "What this validator checks"
              },
              "implementation": {
                "type": "string",
                "description": "Reference to implementation code"
              }
            }
          }
        }
      }
    },
    "responses": {
      "type": "object",
      "properties": {
        "success": {
          "type": "object",
          "required": ["statusCode", "schema"],
          "properties": {
            "statusCode": {
              "type": "integer",
              "minimum": 200,
              "maximum": 299
            },
            "schema": {
              "type": "object",
              "description": "JSON schema for success response"
            },
            "example": {
              "type": "object",
              "description": "Example success response"
            }
          }
        },
        "errors": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["statusCode", "type", "description"],
            "properties": {
              "statusCode": {
                "type": "integer",
                "minimum": 400,
                "maximum": 599
              },
              "type": {
                "type": "string",
                "description": "Error type identifier",
                "examples": ["ValidationError", "NotFoundError"]
              },
              "description": {
                "type": "string",
                "description": "When this error occurs"
              },
              "schema": {
                "type": "object",
                "description": "JSON schema for error response"
              },
              "example": {
                "type": "object",
                "description": "Example error response"
              }
            }
          }
        }
      }
    },
    "businessLogic": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "High-level business logic description"
        },
        "steps": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["order", "description"],
            "properties": {
              "order": {
                "type": "integer",
                "minimum": 1
              },
              "description": {
                "type": "string"
              },
              "component": {
                "type": "string",
                "description": "Component/service responsible"
              },
              "critical": {
                "type": "boolean",
                "description": "Whether this step is critical for success"
              }
            }
          }
        },
        "sideEffects": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Side effects of calling this function",
          "examples": [["Creates database record", "Sends email notification"]]
        },
        "integrations": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "purpose"],
            "properties": {
              "name": {
                "type": "string",
                "description": "External system name",
                "examples": ["Cal.com", "Twilio", "Stripe"]
              },
              "purpose": {
                "type": "string",
                "description": "Why this integration is used"
              },
              "fallback": {
                "type": "string",
                "description": "Behavior if integration fails"
              }
            }
          }
        }
      }
    },
    "dataFlow": {
      "type": "object",
      "properties": {
        "sequence": {
          "type": "string",
          "description": "Mermaid sequence diagram source",
          "contentMediaType": "text/plain"
        },
        "architecture": {
          "type": "string",
          "description": "Mermaid architecture diagram source",
          "contentMediaType": "text/plain"
        },
        "errorHandling": {
          "type": "string",
          "description": "Mermaid error flow diagram source",
          "contentMediaType": "text/plain"
        }
      }
    },
    "testing": {
      "type": "object",
      "properties": {
        "unit": {
          "type": "object",
          "properties": {
            "coverage": {
              "type": "number",
              "minimum": 0,
              "maximum": 100,
              "description": "Unit test coverage percentage"
            },
            "testFiles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Paths to test files"
            }
          }
        },
        "integration": {
          "type": "object",
          "properties": {
            "scenarios": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["name", "description", "payload"],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "payload": {
                    "type": "object"
                  },
                  "expectedStatus": {
                    "type": "integer"
                  },
                  "expectedResponse": {
                    "type": "object"
                  }
                }
              }
            }
          }
        },
        "manual": {
          "type": "object",
          "properties": {
            "checklist": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Manual testing checklist"
            }
          }
        }
      }
    },
    "examples": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "request"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Example name",
            "examples": ["Minimal required fields", "Complete appointment"]
          },
          "description": {
            "type": "string",
            "description": "What this example demonstrates"
          },
          "request": {
            "type": "object",
            "required": ["payload"],
            "properties": {
              "payload": {
                "type": "object",
                "description": "Request body"
              },
              "headers": {
                "type": "object",
                "description": "Additional headers"
              },
              "curl": {
                "type": "string",
                "description": "Complete cURL command"
              }
            }
          },
          "response": {
            "type": "object",
            "required": ["statusCode", "body"],
            "properties": {
              "statusCode": {
                "type": "integer"
              },
              "body": {
                "type": "object"
              }
            }
          }
        }
      }
    },
    "performance": {
      "type": "object",
      "properties": {
        "expectedLatency": {
          "type": "object",
          "properties": {
            "p50": {
              "type": "integer",
              "description": "50th percentile latency in ms"
            },
            "p95": {
              "type": "integer",
              "description": "95th percentile latency in ms"
            },
            "p99": {
              "type": "integer",
              "description": "99th percentile latency in ms"
            }
          }
        },
        "rateLimit": {
          "type": "object",
          "properties": {
            "requests": {
              "type": "integer",
              "description": "Maximum requests"
            },
            "period": {
              "type": "string",
              "description": "Time period (e.g., '1m', '1h')"
            }
          }
        },
        "caching": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean"
            },
            "ttl": {
              "type": "integer",
              "description": "Cache TTL in seconds"
            },
            "keys": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Cache key components"
            }
          }
        }
      }
    },
    "security": {
      "type": "object",
      "properties": {
        "authentication": {
          "type": "boolean",
          "description": "Whether authentication is required"
        },
        "authorization": {
          "type": "object",
          "properties": {
            "required": {
              "type": "boolean"
            },
            "roles": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "description": "Required roles or permissions"
            }
          }
        },
        "inputSanitization": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields that require sanitization",
          "examples": [["notes", "customer_name"]]
        },
        "sensitiveData": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Fields containing PII or sensitive data",
          "examples": [["customer_phone", "customer_email"]]
        }
      }
    },
    "dependencies": {
      "type": "object",
      "properties": {
        "services": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "Internal services this function depends on"
        },
        "external": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["name", "type"],
            "properties": {
              "name": {
                "type": "string"
              },
              "type": {
                "type": "string",
                "enum": ["api", "database", "cache", "queue", "storage"]
              },
              "critical": {
                "type": "boolean",
                "description": "Whether function fails if this is unavailable"
              }
            }
          }
        }
      }
    },
    "changelog": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "date", "changes"],
        "properties": {
          "version": {
            "type": "string"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "author": {
            "type": "string"
          },
          "changes": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "parameter": {
      "type": "object",
      "required": ["name", "type", "description"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Parameter name",
          "pattern": "^[a-z][a-z0-9_]*$"
        },
        "type": {
          "type": "string",
          "enum": ["string", "integer", "number", "boolean", "array", "object"],
          "description": "Data type"
        },
        "format": {
          "type": "string",
          "description": "Format specification",
          "examples": ["email", "date", "date-time", "uuid", "phone"]
        },
        "description": {
          "type": "string",
          "description": "Parameter description",
          "minLength": 10
        },
        "example": {
          "description": "Example value"
        },
        "default": {
          "description": "Default value if not provided"
        },
        "enum": {
          "type": "array",
          "description": "Allowed values"
        },
        "pattern": {
          "type": "string",
          "description": "Regex pattern for validation"
        },
        "minLength": {
          "type": "integer",
          "minimum": 0
        },
        "maxLength": {
          "type": "integer",
          "minimum": 1
        },
        "minimum": {
          "type": "number"
        },
        "maximum": {
          "type": "number"
        },
        "items": {
          "type": "object",
          "description": "Schema for array items (if type is array)"
        },
        "properties": {
          "type": "object",
          "description": "Schema for object properties (if type is object)"
        }
      }
    }
  }
}