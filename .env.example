APP_NAME=AskProAI
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=askproai
DB_USERNAME=root
DB_PASSWORD=

# Database Connection Pool Settings
DB_POOL_ENABLED=true
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_TIMEOUT=10
DB_POOL_IDLE_TIMEOUT=60
DB_POOL_HEALTH_CHECK=30
DB_PERSISTENT=true
DB_TIMEOUT=30

# Database Query Monitoring
DB_LOG_QUERIES=false
DB_LOG_SLOW_QUERIES=true
DB_SLOW_QUERY_TIME=2

BROADCAST_DRIVER=pusher
CACHE_DRIVER=redis
CACHE_STORE=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Session Security Settings (WICHTIG f√ºr Production!)
SESSION_SECURE_COOKIE=true      # HTTPS-only cookies
SESSION_HTTP_ONLY=true          # Prevent XSS attacks
SESSION_SAME_SITE=strict        # CSRF protection
SESSION_ENCRYPT=true            # Encrypt session data

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Broadcasting / WebSockets
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.udag.de
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Cal.com Integration (Legacy - being phased out)
DEFAULT_CALCOM_API_KEY=
DEFAULT_CALCOM_TEAM_SLUG=
