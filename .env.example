METRICS_AUTH_TOKEN=askproai-metrics-token-generate-random-here
MONITORING_ENABLED=true
SENTRY_LARAVEL_DSN=
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Webhook Configuration
