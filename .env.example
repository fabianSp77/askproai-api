# ========================================
# Feature Flags - Phonetic Name Matching
# ========================================
# Enable phonetic name matching for phone-authenticated customers
# Security: Only active for non-anonymous callers
# Default: false (safe deployment)
FEATURE_PHONETIC_MATCHING_ENABLED=false

# Minimum similarity score for phonetic matching (0.0-1.0)
# 0.65 = Levenshtein fallback (e.g., "Sputer" vs "Sputa")
# 0.85 = Phonetic match (Cologne Phonetic codes identical)
# 1.0 = Exact match
FEATURE_PHONETIC_MATCHING_THRESHOLD=0.65

# Test company IDs for controlled rollout (comma-separated)
# Example: "15,42,103"
# Empty = all companies (when feature enabled)
FEATURE_PHONETIC_MATCHING_TEST_COMPANIES=

# Rate limit: max authentication attempts per hour per caller_id
# Default: 3 (security: prevent brute force)
FEATURE_PHONETIC_MATCHING_RATE_LIMIT=3

# Currency Exchange Rates
FALLBACK_USD_EUR_RATE=0.856
EXCHANGE_RATE_CACHE_TTL=3600
