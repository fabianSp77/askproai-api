<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
    bootstrap="vendor/autoload.php"
    colors="true"
    cacheDirectory=".phpunit.cache"
    stopOnFailure="false"
>
    <testsuites>
        <testsuite name="Unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory>tests/Feature</directory>
        </testsuite>
        <testsuite name="Integration">
            <directory>tests/Integration</directory>
        </testsuite>
        <testsuite name="E2E">
            <directory>tests/E2E</directory>
        </testsuite>
        <testsuite name="Performance">
            <directory>tests/Performance</directory>
        </testsuite>
    </testsuites>
    <coverage>
        <report>
            <html outputDirectory="coverage/php" lowUpperBound="50" highLowerBound="90"/>
            <text outputFile="coverage/php/coverage.txt" showOnlySummary="true"/>
            <clover outputFile="coverage/php/clover.xml"/>
            <cobertura outputFile="coverage/php/cobertura.xml"/>
        </report>
    </coverage>
    <logging>
        <junit outputFile="coverage/php/junit.xml"/>
        <testdoxHtml outputFile="coverage/php/testdox.html"/>
        <testdoxText outputFile="coverage/php/testdox.txt"/>
    </logging>
    <source>
        <include>
            <directory>app</directory>
        </include>
    </source>
    <php>
        <!-- Test-Umgebungsvariablen -->
        <env name="APP_ENV" value="testing"/>
        <env name="APP_KEY" value="base64:KgXuiSIghU/rFT2KFE699fYbjrXy8i8/h3rCvyfqZis="/> <!-- Key aus deiner .env -->
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="CACHE_STORE" value="array"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="LOG_CHANNEL" value="single"/>
        <env name="LOG_LEVEL" value="debug"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="APP_MAINTENANCE_DRIVER" value="file"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="DB_POOL_ENABLED" value="false"/>
    </php>
</phpunit>
