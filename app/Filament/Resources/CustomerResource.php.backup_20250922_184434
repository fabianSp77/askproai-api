<?php

namespace App\Filament\Resources;

use App\Filament\Resources\CustomerResource\Pages;
use App\Filament\Resources\CustomerResource\RelationManagers;
use App\Models\Customer;
use Filament\Forms;
use Filament\Forms\Form;
use Filament\Resources\Resource;
use Filament\Tables;
use Filament\Tables\Table;
use Illuminate\Database\Eloquent\Builder;
use Illuminate\Database\Eloquent\SoftDeletingScope;

class CustomerResource extends Resource
{
    protected static ?string $model = Customer::class;

    protected static ?string $navigationIcon = 'heroicon-o-users';

    protected static ?string $navigationGroup = 'CRM';

    protected static ?int $navigationSort = 1;

    public static function form(Form $form): Form
    {
        return $form
            ->schema([
                Forms\Components\Select::make('company_id')
                    ->relationship('company', 'name')
                    ->default(null),
                Forms\Components\TextInput::make('status')
                    ->required()
                    ->maxLength(255)
                    ->default('active'),
                Forms\Components\TextInput::make('customer_type')
                    ->maxLength(255)
                    ->default('private'),
                Forms\Components\TextInput::make('name')
                    ->required()
                    ->maxLength(255),
                Forms\Components\TextInput::make('company_name')
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\TextInput::make('customer_number')
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\TextInput::make('journey_status')
                    ->required()
                    ->maxLength(255)
                    ->default('initial_contact'),
                Forms\Components\DateTimePicker::make('journey_status_updated_at'),
                Forms\Components\Textarea::make('journey_history')
                    ->columnSpanFull(),
                Forms\Components\TextInput::make('email')
                    ->email()
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\TextInput::make('password')
                    ->password()
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\DateTimePicker::make('email_verified_at'),
                Forms\Components\Toggle::make('portal_enabled')
                    ->required(),
                Forms\Components\DateTimePicker::make('portal_token_expires_at'),
                Forms\Components\DateTimePicker::make('last_portal_login_at'),
                Forms\Components\DateTimePicker::make('last_seen_at'),
                Forms\Components\DateTimePicker::make('last_call_at'),
                Forms\Components\TextInput::make('preferred_language')
                    ->required()
                    ->maxLength(5)
                    ->default('de'),
                Forms\Components\TextInput::make('preferred_contact_method')
                    ->required()
                    ->maxLength(255)
                    ->default('phone'),
                Forms\Components\TextInput::make('preferred_appointment_time')
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\DateTimePicker::make('privacy_consent_at'),
                Forms\Components\DateTimePicker::make('marketing_consent_at'),
                Forms\Components\DateTimePicker::make('deletion_requested_at'),
                Forms\Components\TextInput::make('phone')
                    ->tel()
                    ->maxLength(255)
                    ->default(null),
                Forms\Components\Textarea::make('phone_variants')
                    ->columnSpanFull(),
                Forms\Components\TextInput::make('matching_confidence')
                    ->required()
                    ->numeric()
                    ->default(100),
                Forms\Components\Textarea::make('notes')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('tags')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('internal_notes')
                    ->columnSpanFull(),
                Forms\Components\TextInput::make('no_show_count')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('cancelled_count')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\DatePicker::make('first_appointment_date'),
                Forms\Components\DatePicker::make('last_appointment_date'),
                Forms\Components\TextInput::make('appointment_count')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\DateTimePicker::make('last_appointment_at'),
                Forms\Components\TextInput::make('completed_appointments')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('cancelled_appointments')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('no_show_appointments')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('total_revenue')
                    ->required()
                    ->numeric()
                    ->default(0.00),
                Forms\Components\TextInput::make('call_count')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('loyalty_points')
                    ->required()
                    ->numeric()
                    ->default(0),
                Forms\Components\TextInput::make('total_spent')
                    ->required()
                    ->numeric()
                    ->default(0.00),
                Forms\Components\TextInput::make('average_booking_value')
                    ->required()
                    ->numeric()
                    ->default(0.00),
                Forms\Components\Toggle::make('is_vip')
                    ->required(),
                Forms\Components\TextInput::make('loyalty_tier')
                    ->required()
                    ->maxLength(255)
                    ->default('standard'),
                Forms\Components\DateTimePicker::make('vip_since'),
                Forms\Components\Textarea::make('special_requirements')
                    ->columnSpanFull(),
                Forms\Components\DatePicker::make('birthday'),
                Forms\Components\TextInput::make('sort_order')
                    ->numeric()
                    ->default(null),
                Forms\Components\Select::make('preferred_branch_id')
                    ->relationship('preferredBranch', 'name'),
                Forms\Components\Select::make('preferred_staff_id')
                    ->relationship('preferredStaff', 'name'),
                Forms\Components\Textarea::make('booking_history_summary')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('location_data')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('preference_data')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('custom_attributes')
                    ->columnSpanFull(),
                Forms\Components\Textarea::make('communication_preferences')
                    ->columnSpanFull(),
                Forms\Components\DateTimePicker::make('last_security_check'),
                Forms\Components\Textarea::make('security_flags')
                    ->columnSpanFull(),
                Forms\Components\TextInput::make('failed_verification_attempts')
                    ->required()
                    ->numeric()
                    ->default(0),
            ]);
    }

    public static function table(Table $table): Table
    {
        return $table
            ->columns([
                Tables\Columns\TextColumn::make('company.name')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('status')
                    ->searchable(),
                Tables\Columns\TextColumn::make('customer_type')
                    ->searchable(),
                Tables\Columns\TextColumn::make('name')
                    ->searchable(),
                Tables\Columns\TextColumn::make('company_name')
                    ->searchable(),
                Tables\Columns\TextColumn::make('customer_number')
                    ->searchable(),
                Tables\Columns\TextColumn::make('journey_status')
                    ->searchable(),
                Tables\Columns\TextColumn::make('journey_status_updated_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('email')
                    ->searchable(),
                Tables\Columns\TextColumn::make('email_verified_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\IconColumn::make('portal_enabled')
                    ->boolean(),
                Tables\Columns\TextColumn::make('portal_token_expires_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('last_portal_login_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('last_seen_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('last_call_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('preferred_language')
                    ->searchable(),
                Tables\Columns\TextColumn::make('preferred_contact_method')
                    ->searchable(),
                Tables\Columns\TextColumn::make('preferred_appointment_time')
                    ->searchable(),
                Tables\Columns\TextColumn::make('privacy_consent_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('marketing_consent_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('deletion_requested_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('phone')
                    ->searchable(),
                Tables\Columns\TextColumn::make('matching_confidence')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('no_show_count')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('cancelled_count')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('first_appointment_date')
                    ->date()
                    ->sortable(),
                Tables\Columns\TextColumn::make('last_appointment_date')
                    ->date()
                    ->sortable(),
                Tables\Columns\TextColumn::make('appointment_count')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('last_appointment_at')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('completed_appointments')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('cancelled_appointments')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('no_show_appointments')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('total_revenue')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('call_count')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('loyalty_points')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('total_spent')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('average_booking_value')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\IconColumn::make('is_vip')
                    ->boolean(),
                Tables\Columns\TextColumn::make('loyalty_tier')
                    ->searchable(),
                Tables\Columns\TextColumn::make('vip_since')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('birthday')
                    ->date()
                    ->sortable(),
                Tables\Columns\TextColumn::make('sort_order')
                    ->numeric()
                    ->sortable(),
                Tables\Columns\TextColumn::make('created_at')
                    ->dateTime()
                    ->sortable()
                    ->toggleable(isToggledHiddenByDefault: true),
                Tables\Columns\TextColumn::make('updated_at')
                    ->dateTime()
                    ->sortable()
                    ->toggleable(isToggledHiddenByDefault: true),
                Tables\Columns\TextColumn::make('preferredBranch.name')
                    ->searchable(),
                Tables\Columns\TextColumn::make('preferredStaff.name')
                    ->searchable(),
                Tables\Columns\TextColumn::make('last_security_check')
                    ->dateTime()
                    ->sortable(),
                Tables\Columns\TextColumn::make('failed_verification_attempts')
                    ->numeric()
                    ->sortable(),
            ])
            ->filters([
                //
            ])
            ->actions([
                Tables\Actions\EditAction::make(),
            ])
            ->bulkActions([
                Tables\Actions\BulkActionGroup::make([
                    Tables\Actions\DeleteBulkAction::make(),
                ]),
            ]);
    }

    public static function getRelations(): array
    {
        return [
            //
        ];
    }

    public static function getPages(): array
    {
        return [
            'index' => Pages\ListCustomers::route('/'),
            'create' => Pages\CreateCustomer::route('/create'),
            'edit' => Pages\EditCustomer::route('/{record}/edit'),
        ];
    }
}
