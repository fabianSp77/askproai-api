    public static function table(Table $table): Table
    {
        return $table
            // Performance: Eager load relationships
            ->modifyQueryUsing(fn (Builder $query) =>
                $query->with(['company:id,name', 'preferredBranch:id,name', 'preferredStaff:id,name'])
            )
            // Reduce to essential columns only (9 instead of 15+)
            ->columns([
                // Customer identification with visual hierarchy
                Tables\Columns\TextColumn::make('customer_number')
                    ->label('Nr.')
                    ->searchable()
                    ->sortable()
                    ->toggleable()
                    
                    ->size('xs')
                    ->color('gray'),

                // Main customer info with rich formatting
                Tables\Columns\TextColumn::make('name')
                    ->label('Name')
                    ->searchable()
                    ->sortable()
                    ->weight('bold')
                    ->description(fn ($record) =>
                        $record->email ?: $record->phone
                    )
                    ->icon(fn ($record) => match($record->salutation) {
                        'Herr' => 'heroicon-m-user',
                        'Frau' => 'heroicon-m-user',
                        default => 'heroicon-m-users',
                    }),

                // Contact info in compact format
                Tables\Columns\TextColumn::make('phone')
                    ->label('Kontakt')
                    ->searchable()
                    
                    ->icon('heroicon-m-phone')
                    ->size('sm')
                    ->toggleable(),

                // Visual journey status
                Tables\Columns\TextColumn::make('journey_status')
                    ->label('Journey')
                    ->badge()
                    ->colors([
                        'gray' => 'lead',
                        'info' => 'prospect',
                        'success' => 'customer',
                        'warning' => 'regular',
                        'danger' => 'at_risk',
                        'secondary' => 'churned',
                    ])
                    ->icon(fn (string $state): ?string => $state === 'vip' ? 'heroicon-m-sparkles' : null)
                    ->formatStateUsing(fn (string $state): string => match($state) {
                        'lead' => 'ðŸŒ± Lead',
                        'prospect' => 'ðŸ” Interessent',
                        'customer' => 'â­ Kunde',
                        'regular' => 'ðŸ’Ž Stammkunde',
                        'vip' => 'ðŸ‘‘ VIP',
                        'at_risk' => 'âš ï¸ GefÃ¤hrdet',
                        'churned' => 'âŒ Verloren',
                        default => $state,
                    }),

                // Activity indicator
                Tables\Columns\TextColumn::make('last_activity')
                    ->label('AktivitÃ¤t')
                    ->getStateUsing(fn ($record) =>
                        $record->last_appointment_at
                            ? Carbon::parse($record->last_appointment_at)->diffForHumans()
                            : 'Nie'
                    )
                    ->badge()
                    ->color(fn ($record) =>
                        $record->last_appointment_at && Carbon::parse($record->last_appointment_at)->gt(now()->subDays(30))
                            ? 'success'
                            : ($record->last_appointment_at && Carbon::parse($record->last_appointment_at)->gt(now()->subDays(90))
                                ? 'warning'
                                : 'danger')
                    )
                    ->icon('heroicon-m-clock'),

                // Value indicator
                Tables\Columns\TextColumn::make('total_revenue')
                    ->label('Umsatz')
                    ->money('EUR')
                    ->sortable()
                    ->alignEnd()
                    ->weight('bold')
                    ->color(fn ($state) =>
                        $state > 1000 ? 'success' :
                        ($state > 500 ? 'warning' : 'gray')
                    ),

                // Engagement score with visual indicator
                Tables\Columns\TextColumn::make('engagement_score')
                    ->label('Engagement')
                    ->sortable()
                    ->badge()
                    ->formatStateUsing(fn ($state) => $state . '%')
                    ->color(fn ($state) =>
                        $state >= 80 ? 'success' :
                        ($state >= 50 ? 'warning' : 'danger')
                    )
                    ->toggleable(),

                // Status with clear visual coding
                Tables\Columns\TextColumn::make('status')
                    ->label('Status')
                    ->badge()
                    ->colors([
                        'success' => 'active',
                        'warning' => 'inactive',
                        'danger' => 'blocked',
                        'gray' => 'archived',
                    ])
                    ->formatStateUsing(fn (string $state): string => match($state) {
                        'active' => 'âœ… Aktiv',
                        'inactive' => 'â¸ï¸ Inaktiv',
                        'blocked' => 'ðŸš« Gesperrt',
                        'archived' => 'ðŸ“¦ Archiviert',
                        default => $state,
                    }),

                // Preferences with icons
                Tables\Columns\IconColumn::make('communication_preferences')
                    ->label('PrÃ¤ferenzen')
                    ->getStateUsing(fn ($record) => [
                        'sms' => $record->sms_opt_in,
                        'email' => $record->email_opt_in,
                    ])
                    ->icons([
                        'heroicon-o-chat-bubble-left' => fn ($state) => $state['sms'] ?? false,
                        'heroicon-o-envelope' => fn ($state) => $state['email'] ?? false,
                    ])
                    ->colors([
                        'success' => true,
                        'gray' => false,
                    ])
                    ->toggleable(isToggledHiddenByDefault: true),

                // Creation date (hidden by default)
                Tables\Columns\TextColumn::make('created_at')
                    ->label('Erstellt')
                    ->dateTime('d.m.Y')
                    ->sortable()
                    ->toggleable(isToggledHiddenByDefault: true),
            ])
            // Smart filters for business use cases
            ->filters([
                // Quick filters for common views
                Tables\Filters\TernaryFilter::make('activity')
                    ->label('AktivitÃ¤t')
                    ->placeholder('Alle Kunden')
                    ->trueLabel('Aktive (30 Tage)')
                    ->falseLabel('Inaktive (90+ Tage)')
                    ->queries(
                        true: fn (Builder $query) => $query->where('last_appointment_at', '>=', now()->subDays(30)),
                        false: fn (Builder $query) => $query->where('last_appointment_at', '<', now()->subDays(90)),
                        blank: fn (Builder $query) => $query,
                    ),

                SelectFilter::make('journey_status')
                    ->label('Journey Status')
                    ->multiple()
                    ->options([
                        'lead' => 'ðŸŒ± Lead',
                        'prospect' => 'ðŸ” Interessent',
                        'customer' => 'â­ Kunde',
                        'regular' => 'ðŸ’Ž Stammkunde',
                        'vip' => 'ðŸ‘‘ VIP',
                        'at_risk' => 'âš ï¸ GefÃ¤hrdet',
                        'churned' => 'âŒ Verloren',
                    ]),

                SelectFilter::make('status')
                    ->label('Status')
                    ->options([
                        'active' => 'Aktiv',
                        'inactive' => 'Inaktiv',
                        'blocked' => 'Gesperrt',
                        'archived' => 'Archiviert',
                    ]),

                Filter::make('high_value')
                    ->label('High Value (>â‚¬1000)')
                    ->query(fn (Builder $query): Builder => $query->where('total_revenue', '>', 1000)),

                Filter::make('new_customers')
                    ->label('Neue Kunden (30 Tage)')
                    ->query(fn (Builder $query): Builder => $query->where('created_at', '>=', now()->subDays(30))),

                SelectFilter::make('preferred_branch_id')
                    ->label('Filiale')
                    ->relationship('preferredBranch', 'name')
                    ->searchable()
                    ->preload(),
            ])
            ->filtersLayout(Tables\Enums\FiltersLayout::AboveContent)
            ->filtersFormColumns(3)
            // Quick actions for customer management
            ->actions([
                Tables\Actions\ActionGroup::make([
                    // Quick communication actions
                    Tables\Actions\Action::make('sendSms')
                        ->label('SMS senden')
                        ->icon('heroicon-m-chat-bubble-left')
                        ->color('info')
                        ->form([
                            Forms\Components\Textarea::make('message')
                                ->label('Nachricht')
                                ->required()
                                ->rows(3)
                                ->maxLength(160)
                                ->helperText('Max. 160 Zeichen'),
                        ])
                        ->action(function ($record, array $data) {
                            // TODO: Implement SMS sending
                            Notification::make()
                                ->title('SMS gesendet')
                                ->body("SMS an {$record->name} wurde gesendet.")
                                ->success()
                                ->send();
                        })
                        ->visible(fn ($record) => $record->sms_opt_in && $record->phone),

                    // Quick appointment booking
                    Tables\Actions\Action::make('bookAppointment')
                        ->label('Termin buchen')
                        ->icon('heroicon-m-calendar')
                        ->color('success')
                        ->url(fn ($record) => route('filament.admin.resources.appointments.create', [
                            'customer_id' => $record->id
                        ])),

                    // Journey status update
                    Tables\Actions\Action::make('updateJourney')
                        ->label('Journey aktualisieren')
                        ->icon('heroicon-m-arrow-trending-up')
                        ->color('warning')
                        ->form([
                            Forms\Components\Select::make('journey_status')
                                ->label('Neuer Status')
                                ->options([
                                    'lead' => 'ðŸŒ± Lead',
                                    'prospect' => 'ðŸ” Interessent',
                                    'customer' => 'â­ Kunde',
                                    'regular' => 'ðŸ’Ž Stammkunde',
                                    'vip' => 'ðŸ‘‘ VIP',
                                    'at_risk' => 'âš ï¸ GefÃ¤hrdet',
                                    'churned' => 'âŒ Verloren',
                                ])
                                ->required(),
                            Forms\Components\Textarea::make('note')
                                ->label('Notiz')
                                ->rows(2),
                        ])
                        ->action(function ($record, array $data) {
                            $oldStatus = $record->journey_status;
                            $record->update(['journey_status' => $data['journey_status']]);

                            // Log the change
                            if ($data['note']) {
                                // TODO: Create note with journey change
                            }

                            Notification::make()
                                ->title('Journey Status aktualisiert')
                                ->body("Status von {$oldStatus} auf {$data['journey_status']} geÃ¤ndert.")
                                ->success()
                                ->send();
                        }),

                    // Quick note
                    Tables\Actions\Action::make('addNote')
                        ->label('Notiz hinzufÃ¼gen')
                        ->icon('heroicon-m-pencil-square')
                        ->color('gray')
                        ->form([
                            Forms\Components\TextInput::make('subject')
                                ->label('Betreff')
                                ->required(),
                            Forms\Components\Textarea::make('content')
                                ->label('Inhalt')
                                ->required()
                                ->rows(3),
                        ])
                        ->action(function ($record, array $data) {
                            $record->notes()->create([
                                'subject' => $data['subject'],
                                'content' => $data['content'],
                                'type' => 'general',
                                'created_by' => auth()->id(),
                            ]);

                            Notification::make()
                                ->title('Notiz hinzugefÃ¼gt')
                                ->success()
                                ->send();
                        }),

                    Tables\Actions\ViewAction::make(),
                    Tables\Actions\EditAction::make(),
                ]),
            ])
            // Bulk operations
            ->bulkActions([
                Tables\Actions\BulkActionGroup::make([
                    Tables\Actions\BulkAction::make('bulkSms')
                        ->label('Massen-SMS')
                        ->icon('heroicon-m-chat-bubble-left')
                        ->color('info')
                        ->form([
                            Forms\Components\Textarea::make('message')
                                ->label('Nachricht')
                                ->required()
                                ->rows(3)
                                ->maxLength(160),
                        ])
                        ->action(function ($records, array $data) {
                            $count = 0;
                            foreach ($records as $record) {
                                if ($record->sms_opt_in && $record->phone) {
                                    // TODO: Send SMS
                                    $count++;
                                }
                            }

                            Notification::make()
                                ->title('Massen-SMS gesendet')
                                ->body("{$count} SMS wurden gesendet.")
                                ->success()
                                ->send();
                        })
                        ->requiresConfirmation(),

                    Tables\Actions\BulkAction::make('updateJourneyStatus')
                        ->label('Journey Status Ã¤ndern')
                        ->icon('heroicon-m-arrow-trending-up')
                        ->color('warning')
                        ->form([
                            Forms\Components\Select::make('journey_status')
                                ->label('Neuer Status')
                                ->options([
                                    'lead' => 'ðŸŒ± Lead',
                                    'prospect' => 'ðŸ” Interessent',
                                    'customer' => 'â­ Kunde',
                                    'regular' => 'ðŸ’Ž Stammkunde',
                                    'vip' => 'ðŸ‘‘ VIP',
                                    'at_risk' => 'âš ï¸ GefÃ¤hrdet',
                                    'churned' => 'âŒ Verloren',
                                ])
                                ->required(),
                        ])
                        ->action(function ($records, array $data) {
                            $records->each->update(['journey_status' => $data['journey_status']]);

                            Notification::make()
                                ->title('Journey Status aktualisiert')
                                ->body(count($records) . ' Kunden wurden aktualisiert.')
                                ->success()
                                ->send();
                        })
                        ->requiresConfirmation(),

                    Tables\Actions\ExportBulkAction::make()
                        ->label('Exportieren'),

                    Tables\Actions\DeleteBulkAction::make(),
                ]),
            ])
            // Performance optimizations
            ->defaultPaginationPageOption(25)
            ->poll('30s')
            ->deferLoading()
            ->persistFiltersInSession()
            ->persistSortInSession()
            ->striped();
    }

    public static function getRelations(): array
    {
        return [
            RelationManagers\AppointmentsRelationManager::class,
            RelationManagers\CallsRelationManager::class,
            RelationManagers\NotesRelationManager::class,
        ];
    }

