                ->modalHeading('Inaktive Kunden löschen')
                ->modalDescription('Alle ausgewählten inaktiven Kunden ohne Termine in den letzten 12 Monaten werden gelöscht.')
                ->action(function (Collection $records) {
                    $deleted = 0;
                    foreach ($records as $record) {
                        if ($record->appointments()->where('starts_at', '>=', now()->subYear())->count() === 0) {
                            $record->delete();
                            $deleted++;
                        }
                    }
                    
                    Notification::make()
                        ->title('Kunden gelöscht')
                        ->warning()
                        ->body($deleted . ' inaktive Kunden wurden gelöscht.')
                        ->send();
                }),
        ];
    }
    
