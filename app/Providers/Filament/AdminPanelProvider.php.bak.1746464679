<?php

namespace App\Providers\Filament;

use Filament\Panel;
use Filament\Navigation\NavigationItem;
use Filament\PanelProvider;

class AdminPanelProvider extends PanelProvider
{
    public function panel(Panel $panel): Panel
    {
        return $panel
            ->id('admin')
            ->path('admin')

            /*  Auth-Seiten AKTIVIEREN  */
            ->auth()            // == login + passwort reset + verify + profile

            /*  Ressourcen automatisch einsammeln  */
            ->discoverResources(
                app_path('Filament/Admin/Resources'),
                'App\\Filament\\Admin\\Resources',
            )

            /*  Optional: Seiten / Widgets automatisch einsammeln  */
            ->discoverPages()
            ->discoverWidgets()

            /*  Beispiel-Navigation-Eintrag (lÃ¶schen, wenn nicht gebraucht) */
            ->navigationItems([
                NavigationItem::make()
                    ->label('Dashboard')
                    ->icon('heroicon-o-home')
                    ->url('/admin')
                    ->sort(0),
            ]);
    }
}
